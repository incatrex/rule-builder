{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://api.rulebuilder.com/schemas/rule-v1.0.0.json",
  "title": "Rule Builder Schema",
  "description": "JSON Schema for validating Rule Builder generated rules",
  "version": "1.0.0",
  "type": "object",
  "required": ["structure", "returnType", "ruleType", "uuId", "version", "metadata", "content"],
  "properties": {
    "structure": {
      "type": "string",
      "enum": ["case", "condition", "expression"],
      "description": "The type of rule structure: case (CASE/WHEN/THEN), condition (condition group), or expression (single expression)"
    },
    "returnType": {
      "type": "string",
      "enum": ["boolean", "number", "text", "date"],
      "description": "The data type that this rule evaluates to"
    },
    "ruleType": {
      "type": "string",
      "enum": ["Reporting", "Validation", "Calculation", "Decision"],
      "description": "The business purpose of this rule"
    },
    "uuId": {
      "type": "string",
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$",
      "description": "Unique identifier for the rule in UUID format"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Version number of the rule"
    },
    "metadata": {
      "type": "object",
      "required": ["id", "description"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Human-readable identifier for the rule"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what the rule does"
        }
      },
      "additionalProperties": false
    },
    "content": {
      "oneOf": [
        { "$ref": "#/$defs/CaseExpression" },
        { "$ref": "#/$defs/ConditionGroup" },
        { "$ref": "#/$defs/Expression" }
      ],
      "description": "The actual rule content, structure depends on the 'structure' field"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "CaseExpression": {
      "type": "object",
      "required": ["whenClauses"],
      "properties": {
        "whenClauses": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/WhenClause" },
          "description": "Array of WHEN/THEN clause pairs"
        },
        "else": {
          "$ref": "#/$defs/ResultExpression",
          "description": "Optional ELSE clause with default result"
        }
      },
      "additionalProperties": false
    },
    "WhenClause": {
      "type": "object",
      "required": ["when", "then"],
      "properties": {
        "when": {
          "oneOf": [
            { "$ref": "#/$defs/ConditionGroup" },
            { "$ref": "#/$defs/Condition" }
          ],
          "description": "The condition that must be true for this clause"
        },
        "then": {
          "$ref": "#/$defs/ResultExpression",
          "description": "The result to return if the WHEN condition is true"
        }
      },
      "additionalProperties": false
    },
    "ResultExpression": {
      "type": "object",
      "required": ["name", "value"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name for this result"
        },
        "value": {
          "$ref": "#/$defs/Expression",
          "description": "The expression that produces the result value"
        }
      },
      "additionalProperties": false
    },
    "ConditionGroup": {
      "type": "object",
      "required": ["conjunction", "conditions"],
      "properties": {
        "conjunction": {
          "type": "string",
          "enum": ["AND", "OR"],
          "description": "Logical operator combining the conditions in this group"
        },
        "conditions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "oneOf": [
              { "$ref": "#/$defs/Condition" },
              { "$ref": "#/$defs/ConditionGroup" }
            ]
          },
          "description": "Array of conditions or nested condition groups"
        },
        "not": {
          "type": "boolean",
          "description": "If true, negates the entire condition group"
        }
      },
      "additionalProperties": false
    },
    "Condition": {
      "type": "object",
      "required": ["left", "operator"],
      "properties": {
        "left": {
          "$ref": "#/$defs/Expression",
          "description": "Left side expression of the condition"
        },
        "operator": {
          "type": "string",
          "enum": [
            "equal", "not_equal", "less", "less_or_equal", "greater", "greater_or_equal",
            "contains", "not_contains", "starts_with", "ends_with", 
            "is_empty", "is_not_empty", "between", "not_between"
          ],
          "description": "Comparison operator for the condition"
        },
        "right": {
          "oneOf": [
            { "$ref": "#/$defs/Expression" },
            {
              "type": "array",
              "items": { "$ref": "#/$defs/Expression" },
              "minItems": 2,
              "maxItems": 2
            }
          ],
          "description": "Right side expression(s) - single expression for most operators, array of 2 for 'between'/'not_between'"
        }
      },
      "additionalProperties": false
    },
    "Expression": {
      "type": "object",
      "required": ["source", "returnType"],
      "properties": {
        "source": {
          "type": "string",
          "enum": ["value", "field", "function"],
          "description": "Source type of the expression"
        },
        "returnType": {
          "type": "string",
          "enum": ["text", "number", "date", "boolean"],
          "description": "Data type this expression returns"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "source": { "const": "value" } }
          },
          "then": {
            "required": ["value"],
            "properties": {
              "value": {
                "description": "The literal value",
                "oneOf": [
                  { "type": "string" },
                  { "type": "number" },
                  { "type": "boolean" },
                  { "type": "null" }
                ]
              }
            },
            "not": {
              "anyOf": [
                { "required": ["field"] },
                { "required": ["name"] },
                { "required": ["args"] }
              ]
            }
          }
        },
        {
          "if": {
            "properties": { "source": { "const": "field" } }
          },
          "then": {
            "required": ["field"],
            "properties": {
              "field": {
                "type": "string",
                "description": "Field path in dot notation (e.g., 'TABLE1.TEXT_FIELD_01')",
                "pattern": "^[A-Z0-9_]+\\.[A-Z0-9_]+$"
              }
            },
            "not": {
              "anyOf": [
                { "required": ["value"] },
                { "required": ["name"] },
                { "required": ["args"] }
              ]
            }
          }
        },
        {
          "if": {
            "properties": { "source": { "const": "function" } }
          },
          "then": {
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "enum": [
                  "MATH.ADD", "MATH.SUBTRACT", "MATH.MULTIPLY", "MATH.DIVIDE", 
                  "MATH.SUM", "MATH.ROUND", "MATH.ABS",
                  "TEXT.CONCAT", "TEXT.MID", "TEXT.LEN",
                  "DATE.DIFF"
                ],
                "description": "Function name in category.function format"
              },
              "args": {
                "type": "array",
                "description": "Function arguments",
                "items": {
                  "type": "object",
                  "required": ["name", "value"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Argument name"
                    },
                    "value": {
                      "$ref": "#/$defs/Expression",
                      "description": "Argument value expression"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "allOf": [
              {
                "if": {
                  "properties": { "name": { "enum": ["MATH.ADD", "MATH.SUM"] } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 2,
                      "maxItems": 20,
                      "description": "Dynamic arguments for ADD/SUM functions (2-20 numeric values)"
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "MATH.SUBTRACT" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "num1" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "num2" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "MATH.MULTIPLY" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "num1" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "num2" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "MATH.DIVIDE" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "dividend" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "divisor" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "MATH.ROUND" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "number" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "decimals" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "MATH.ABS" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 1,
                      "maxItems": 1,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "number" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "TEXT.CONCAT" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "text1" },
                            "value": { "properties": { "returnType": { "const": "text" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "text2" },
                            "value": { "properties": { "returnType": { "const": "text" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "TEXT.MID" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 3,
                      "maxItems": 3,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "text" },
                            "value": { "properties": { "returnType": { "const": "text" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "start" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "length" },
                            "value": { "properties": { "returnType": { "const": "number" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "TEXT.LEN" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 1,
                      "maxItems": 1,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "text" },
                            "value": { "properties": { "returnType": { "const": "text" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "if": {
                  "properties": { "name": { "const": "DATE.DIFF" } }
                },
                "then": {
                  "properties": {
                    "args": {
                      "minItems": 2,
                      "maxItems": 2,
                      "items": [
                        {
                          "properties": {
                            "name": { "const": "date1" },
                            "value": { "properties": { "returnType": { "const": "date" } } }
                          }
                        },
                        {
                          "properties": {
                            "name": { "const": "date2" },
                            "value": { "properties": { "returnType": { "const": "date" } } }
                          }
                        }
                      ]
                    }
                  }
                }
              }
            ],
            "not": {
              "anyOf": [
                { "required": ["value"] },
                { "required": ["field"] }
              ]
            }
          }
        }
      ],
      "additionalProperties": false
    }
  }
}